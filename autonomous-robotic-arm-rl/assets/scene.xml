<mujoco model="arm4dof_scene">
  <compiler angle="degree" coordinate="local"/>
  <option timestep="0.02" gravity="0 0 -9.81" integrator="RK4"/>
  <size njmax="2000" nconmax="200"/>
  <visual>
    <global offwidth="640" offheight="480"/>
  </visual>

  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1="0.2 0.2 0.2" rgb2="0.3 0.3 0.3" width="512" height="512"/>
    <material name="grid_mat" texture="grid" texrepeat="4 4" texuniform="true"/>
  </asset>

  <include file="arm4dof/arm4dof.xml"/>

  <worldbody>
    <geom name="floor" type="plane" size="1 1 0.1" material="grid_mat" rgba="0.4 0.4 0.4 1"/>

    <geom name="table" type="box" pos="0.25 0 0.02" size="0.3 0.3 0.02" rgba="0.6 0.5 0.4 1"/>

    <body name="object" pos="0.2 0 0.04">
      <freejoint name="object_free"/>
      <geom name="object_geom" type="box" size="0.02 0.02 0.02" rgba="0.8 0.2 0.2 1"/>
    </body>

    <site name="goal" pos="0.35 0.15 0.04" size="0.03" rgba="0.2 0.8 0.2 0.6"/>

    <light name="key" pos="1 1 2" dir="-1 -1 -2" diffuse="0.8 0.8 0.8" specular="0.2 0.2 0.2"/>
    <camera name="main" pos="0.8 -0.8 0.6" xyaxes="0.7 0.7 0  -0.3 0.3 0.9"/>
  </worldbody>
</mujoco>

<mujoco model="arm4dof">
  <compiler angle="degree" coordinate="local"/>
  <option timestep="0.02" gravity="0 0 -9.81" integrator="RK4"/>
  <default>
    <joint limited="true" damping="1"/>
    <geom friction="1 0.1 0.1" density="300" rgba="0.7 0.7 0.7 1"/>
    <motor ctrllimited="true" ctrlrange="-1 1"/>
  </default>

  <worldbody>
    <body name="base" pos="0 0 0">
      <geom type="cylinder" size="0.05 0.02" rgba="0.3 0.3 0.3 1"/>
      <body name="link1" pos="0 0 0.04">
        <joint name="joint1_yaw" type="hinge" axis="0 0 1" range="-180 180"/>
        <geom type="capsule" fromto="0 0 0 0 0 0.15" size="0.03"/>
        <body name="link2" pos="0 0 0.15">
          <joint name="joint2_pitch" type="hinge" axis="0 1 0" range="-90 90"/>
          <geom type="capsule" fromto="0 0 0 0 0 0.18" size="0.025"/>
          <body name="link3" pos="0 0 0.18">
            <joint name="joint3_pitch" type="hinge" axis="0 1 0" range="-120 120"/>
            <geom type="capsule" fromto="0 0 0 0 0 0.16" size="0.02"/>
            <body name="link4" pos="0 0 0.16">
              <joint name="joint4_pitch" type="hinge" axis="0 1 0" range="-120 120"/>
              <geom type="capsule" fromto="0 0 0 0 0 0.12" size="0.018"/>
              <body name="gripper" pos="0 0 0.12">
                <joint name="gripper_slide" type="slide" axis="0 1 0" range="0 0.04" limited="true"/>
                <geom name="gripper_pad" type="box" size="0.015 0.01 0.01" pos="0 0.02 0" rgba="0.4 0.4 0.9 1"/>
                <site name="tcp" pos="0 0 0" size="0.01" rgba="0 1 0 1"/>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="act_joint1" joint="joint1_yaw" gear="60"/>
    <motor name="act_joint2" joint="joint2_pitch" gear="50"/>
    <motor name="act_joint3" joint="joint3_pitch" gear="40"/>
    <motor name="act_joint4" joint="joint4_pitch" gear="30"/>
    <motor name="act_gripper" joint="gripper_slide" gear="10"/>
  </actuator>
</mujoco>
